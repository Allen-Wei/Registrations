@model.Registrations.Models.College

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Vendors/jquery-2.1.3.min.js"></script>
    <title>Canvas</title>
    <style type="text/css">
        * {
            margin: 0;
            padding: 0;
        }
    </style>
</head>
<body>
    <h1>@ViewBag.info</h1>
    <div>
        <canvas id="cvs"></canvas>
    </div>
    <script>

        var Utils = {
            stroke: function (cxt, callbak) {
                cxt.beginPath();
                callbak(cxt);
                cxt.closePath();
                cxt.stroke();
            },
            fill: function (cxt, callback) {
                cxt.beginPath();
                callbak(cxt);
                cxt.closePath();
                cxt.fill();

            }
        };


        var canvas = document.querySelector('#cvs');
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        var context = canvas.getContext('2d');
        context.strokeStyle = 'rgba(250, 0, 0, .8)';
        context.lineWidth = 1;
        context.save();
        var step = 100;
        for (var i = 0; i < canvas.height; i += step) {
            Utils.stroke(context, function () {
                context.moveTo(0, i);
                context.lineTo(canvas.width, i)
            });
        }
        context.strokeStyle = 'rgba(0, 250, 0, .8)';
        context.save();
        for (var i = 0; i < canvas.width; i += step) {
            Utils.stroke(context, function () {
                context.moveTo(i, 0);
                context.lineTo(i, canvas.height);
            });
        }

        context.strokeStyle = "#0094ff";
        for (var r = 0; r < canvas.height / 2; r += step) {
            var rx = canvas.width / 2;
            var ry = canvas.height / 2;
            Utils.stroke(context, function () {
                context.arc(rx, ry, r === 0 ? 2 : r, 0, Math.PI * 2, false);
            });
        }

        context.shadowBlur = 0;
        context.shadowColor = 'rgba(0, 100, 200, .5)';
        context.shadowOffsetX = 5;
        context.shadowOffsetY = 5;
        context.fillStyle = 'rgba(0, 0, 250, .5)';
        context.save();
        context.fillRect(rx, ry, 100, 100);
        context.restore();
        context.restore();
        context.font = 'italic 30px sans-serif';
        context.strokeText('Hello, world.', rx, ry, 500);



    </script>

</body>
</html>
